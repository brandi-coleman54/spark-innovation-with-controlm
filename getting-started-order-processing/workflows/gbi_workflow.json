{   "Defaults" : {
        
		"Application": "GBR-",
		"SubApplication": "GBR-API",
		"ControlmServer": "IN01",
		"RunAs": "ctmvse",
		"Job": {
			"When": {
				"WeekDays": [
					"ALL"
				]
			},
			"ActionIfFailure": {
				"Type": "If",
				"CompletionStatus": "NOTOK",
				
				"mailToTeam": {
					"Type": "Mail",
					"Subject": "%%JOBNAME has failed",
					"Message": "Click the link: http://vl-aus-ctm-em01.ctm.bmc.com:18080/ControlM/#Neighborhood:id=%%ORDERID.&ctm=%%DATACENTER&name=%%JOBNAME.&date=%%DATE",
					"To": "gregg_rask@bmc.com"
				}
			}
		}
	},
	"GBI-Folder": {
		"Type": "Folder",
		"SiteStandard": "SE Demo System Standard",
	    "BusinessFields" : [ {
           "Usercode" : "GBR"
		   } ],
		"Description": "this is the Global Business Intelligence Folder",
		"Comment": "Code reviewed by Gregg",
		

		"GBR-echo-command": {
			"Type": "Job:Command",
			"Host": "zzz-linux-agent-01",
			"Description": "this job will echo",
			"Command": "echo This is the first workload to run in the GBR-API_Flow"
		},
		"GBR-sleep-command": {
			"Type": "Job:Command",
			"Host": "zzz-linux-agent-01",
			"Description": "this job will sleep",
			"Command": "sleep 20"
		},
		"GBR-list-dir": {
			"Type": "Job:Command",
			"Host": "zzz-linux-agent-01",
			"Description": "this job will list a directory",
			"Command": "ls -al"
		},
		"GBR-copy-file": {
			"Type": "Job:Command",
			"Host": "zzz-linux-agent-01",
			"Description": "this job will copy a file",
			"Command": "cp /home/grask@adprod.bmc.com/apps/TST/App1/new_file /home/grask@adprod.bmc.com/apps/TST/App1/newer_file"
		},
		"GBR-run-script": {
			"Type": "Job:Script",
			"FilePath": "/opt/ctm/ctmagent/scripts/",
			"Host": "zzz-linux-agent-01",
			"Description": "this job will run a script",
			"FileName": "ag_diag_comm"
		},
		"GBR-SLA": {
			"Type": "Job:SLAManagement",
			"ServiceName": "Global Business Intelligence",
			"ServicePriority": "3",
			"SubApplication": "GBR-API",
			"Description": "this job will track the SLA",
			"Host": "zzz-linux-agent-01",
			"JobRunsDeviationsTolerance": "3",
			"CreatedBy": "grask",
			"RunAs": "ctmvse",
			"Application": "GBR-",
			"CompleteIn": {
				"Time": "0:05"
			}
		},
		"GBR-troublemaker": {
			"Type": "Job:Command",
			"Description": "job runs as root which is a no-no",
			"Command": "echo good to go",
			"RunAs": "ctmvse",
			"Host": "zzz-linux-agent-01",
			"DocumentationUrl": {
				"Url": "http://bmc.com"
			}
		},
		"Flow1": {
			"Type": "Flow",
			"Sequence": [
				"GBR-echo-command",
				"GBR-sleep-command"
			]
		},
		"Flow2": {
			"Type": "Flow",
			"Sequence": [
				"GBR-sleep-command",
				"GBR-list-dir"
			]
		},
		"Flow3": {
			"Type": "Flow",
			"Sequence": [
				"GBR-list-dir",
				"GBR-run-script"
			]
		},
		"Flow4": {
			"Type": "Flow",
			"Sequence": [
				"GBR-run-script",
				"GBR-troublemaker"
			]
		},
		"Flow5": {
			"Type": "Flow",
			"Sequence": [
				"GBR-troublemaker",
				"GBR-copy-file"
			]
		},
		"Flow6": {
			"Type": "Flow",
			"Sequence": [
				"GBR-copy-file",
				"GBR-SLA"
			]
		}
	}
