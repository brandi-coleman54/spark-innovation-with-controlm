{
  "DeployDescriptor": [
    {
      "Property": "CreatedBy",
      "Assign": "${CTM_USER}"
    },
    {
      "Property": "Host",
      "Replace": [
        {
          "zzz(.*)": "${CTM_USER_CODE}$1"
        }
      ]
    },
    {
      "Property": "Application",
      "Replace": [
        {
          "zzz(.*)": "${CTM_USER_CODE}$1"
        }
      ]
    },
    {
      "Property": "SubApplication",
      "Replace": [
        {
          "zzz(.*)": "${CTM_USER_CODE}$1"
        }
      ]
    },
    {
      "Property": "ReferencePath",
      "Replace": [
        {
          "zzz(.*)": "${CTM_USER_CODE}$1"
        }
      ]
    },
    {
      "ApplyOn": {
        "Type": "Job.*"
      },
      "Property": "ConnectionProfile",
      "Replace": [
        {
          "ZZZ(.*)": "${CTM_UC_USER_CODE}$1"
        }
      ]
    },
    {
      "ApplyOn": {
        "Type": "Job.*"
      },
      "Property": "ConnectionProfileSrc",
      "Replace": [
        {
          "ZZZ(.*)": "${CTM_UC_USER_CODE}$1"
        }
      ]
    },
    {
      "ApplyOn": {
        "Type": "Job.*"
      },
      "Property": "ConnectionProfileDest",
      "Replace": [
        {
          "ZZZ(.*)": "${CTM_UC_USER_CODE}$1"
        }
      ]
    },
    {
      "ApplyOn": {
        "Type": "Job.*"
      },
      "Property": "Query",
      "Replace": [
        {
          "(.*)zzz(.*)zzz(.*)": "$1${CTM_USER_CODE}$2${CTM_USER_CODE}$3"
        }
      ]
    },
    {
      "ApplyOn": {
        "Type": "Job.*"
      },
      "Property": "Query",
      "Replace": [
        {
          "(.*)zzz(.*)": "$1${CTM_USER_CODE}$2"
        }
      ]
    },
    {
      "ApplyOn": {
        "Type": "Job.Command"
      },
      "Property": "Command",
      "Replace": [
        {
          "(.*)zzz_email(.*)zzz": "$1${CTM_USER}$2${CTM_USER_CODE}"
        }
      ]
    },
    {
      "ApplyOn": {
        "Type": "Job.Command"
      },
      "Property": "Command",
      "Replace": [
        {
          "(.*)zzz": "$1${CTM_USER_CODE}"
        }
      ]
    },
    {
      "ApplyOn": {
        "Type": "Job.*"
      },
      "Property": "AI-Parameters",
      "Replace": [
        {
          "(.*)zzz_email(.*)zzz(.*)": "$1${CTM_USER}$2${CTM_USER_CODE}$3"
        }
      ]
    },
    {
      "ApplyOn": {
        "Type": "Job.SLA*"
      },
      "Property": "ServiceName",
      "Replace": [
        {
          "ZZZ(.*)": "${CTM_UC_USER_CODE}$1"
        }
      ]
    },
    {
      "Property": "@",
      "ApplyOn": {
        "Type": "Folder"
      },
      "Replace": [
        {
          "zzz(.*)": "${CTM_USER_CODE}$1"
        }
      ]
    },
    {
      "Property": "ReferencePath",
      "ApplyOn": {
        "Type": "SubFolder",
        "@": "payments_ref"
      },
      "Replace": [
        {
          "zzz(.*)": "${CTM_USER_CODE}$1"
        }
      ]
    },
    {
      "Property": "$.Variables[*].*",
      "MapCondition": "KEY:home_dir",
      "Assign": "/home/controlm"
    },
    {
      "Property": "$.Variables[*].*",
      "MapCondition": "KEY:repo_dir",
      "Assign": "${USER_HOME}/${BASE_DIR}"
    }
  ]
}
