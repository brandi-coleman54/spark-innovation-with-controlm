{
    "Defaults": {
        "Application": "zzz_insurance_ops",
        "SubApplication": "zzz_claims_processing",
        "ControlmServer": "IN01",
        "Host": "zzz_instruqt_server",
        "RunAs": "controlm"
    },
    "zzz_Claims_Processing_Workflow": {
        "Type": "Folder",
        "Variables": [
            {
                "claim_id": "C12345"
            },
            {
                "policy_id": "P98765"
            }
        ],
        "Description": "Claims processing workflow simulates intake, fraud detection, policy validation, adjuster assignment, payment, and reporting.\n\nEach job runs sequentially using OnSuccess dependencies, mimicking a real BFSI claims lifecycle for demo/training.",
        "OrderMethod": "Manual",
        "Intake_Claim": {
            "Type": "Job:Command",
            "Description": "Validate and log incoming claim request",
            "Command": "python3 /home/controlm/spark-innovation-with-controlm/bfsi-claims/scripts/intake_claim.py --claim %%claim_id"
        },
        "Fraud_Check": {
            "Type": "Job:Command",
            "Description": "Perform fraud risk scoring for the claim",
            "Command": "python3 /home/controlm/spark-innovation-with-controlm/bfsi-claims/scripts/fraud_check_claim.py --claim %%claim_id"
        },
        "Policy_Validation": {
            "Type": "Job:Command",
            "Description": "Validate policy coverage and resources",
            "Command": "python3 /home/controlm/spark-innovation-with-controlm/bfsi-claims/scripts/policy_validation.py %%policy_id"
        },
        "Assign_Adjuster": {
            "Type": "Job:Command",
            "Description": "Queue claim for adjuster review or auto-approval",
            "Command": "python3 /home/controlm/spark-innovation-with-controlm/bfsi-claims/scripts/assign_adjuster.py --claim %%claim_id"
        },
        "Disburse_Payment": {
            "Type": "Job:Command",
            "Description": "Process payment for approved claim",
            "Command": "python3 /home/controlm/spark-innovation-with-controlm/bfsi-claims/scripts/disburse_payment.py --claim %%claim_id"
        },
        "Generate_Reporting": {
            "Type": "Job:Command",
            "Description": "Aggregate processed claims data for dashboards",
            "Command": "python3 /home/controlm/spark-innovation-with-controlm/bfsi-claims/scripts/claims_reporting.py --date $(date +%F)"
        }
    }
}
